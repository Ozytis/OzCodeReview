@inherits Ozytis.Common.Core.RazorTemplating.RazorEngineBaseTemplate<Business.Emails.PasswordResetModel>

<p>
    Hello @Model.UserFirstName @Model.UserLastName,
</p>
<p>
    You requested to reset your password, please click <a href="@Model.Link" title="Reinit password">this link to change it</a>.
    This link is valid for 24h, after that, you will have to make another request.
    If you did not request to change your password, you can safely ignore this email.
</p>
